<?xml version="1.0" standalone="yes"?>
<application>
	<name>
		Multihosting Application
	</name>

	<description>
		This is the application I use to test multi-hosting.
	</description>

	<service-type>http</service-type>		<!-- not yet used -->
	<hostname>213.84.38.200</hostname>

	<!-- First page will get highest priority (etc) -->
	<default-pages>
		<page name="index.html" />
	</default-pages>

	<web-root>
		<path>/usr/www/webroot2/</path>
	</web-root>

	<program>
		<path>/usr/Jorinde/httpd/obj/app</path>
	</program>

	<local-time>
		<zone> GMT+1</zone>
	</local-time>

	<session>
		<enabled>1</enabled>
		<length>900</length>
	</session>

	<media-types>
		<media-type id="xx">
			<file-suffix>xx</file-suffix><content-type>xx</content-type>
		</media-type>

		<!-- TODO: ... ADD ALL THE OTHER MEDIA-TYPES ACCORDING TO ABOVE. -->

		<media-type id="c">
			<file-suffix>c</file-suffix>
			<content-type>text/html</content-type>
			<handler>
				<path>/usr/www/mh/c</path>
			</handler>
		</media-type>

		<media-type id="lsp">
			<file-suffix>lsp</file-suffix>
			<content-type>text/html</content-type>
			<handler>
				<path>/usr/www/mh/lsp</path>
				<param key="lsp_home" value="/usr/www/lsp/" />
			</handler>
		</media-type>

	</media-types>

</application>

